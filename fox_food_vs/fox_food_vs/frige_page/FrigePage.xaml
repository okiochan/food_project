<Page x:Class="fox_food_vs.pages.frige_page.FrigePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fox_food_vs.pages.frige_page"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="FrigePage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0 0 10 0" Orientation="Horizontal">

            <TextBlock  VerticalAlignment="Center" Text="Frige" FontWeight="Bold"  FontSize="15"/>

            <Button Margin="10 10 " x:Name="btnEdit" Click="btnEdit_Click">edit</Button>
            <Button Margin="10 10 " x:Name="btnSearch">search</Button>

        </StackPanel>

    </Grid>
</Page>
